<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --bg: #e8e3d8;
    --text: #2d2d2d;
    --text-light: #5a5a5a;
    --accent: #1a1a1a;
    --link: #4a4a4a;
    --border: #d0cbc0;
  }

  body {
    background-color: var(--bg);
    color: var(--text);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 18px;
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
  }

  main {
    max-width: 720px;
    margin: 0 auto;
    padding: 80px 24px;
  }

  h1 {
    font-size: 32px;
    font-weight: 400;
    margin-bottom: 48px;
    color: var(--text-light);
  }

  h2 {
    font-size: 24px;
    font-weight: 600;
    margin: 80px 0 32px;
    color: var(--accent);
  }

  h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--accent);
  }

  p {
    margin-bottom: 24px;
    color: var(--text);
  }

  strong {
    font-weight: 600;
    color: var(--accent);
  }

  a {
    color: var(--link);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: all 0.2s ease;
  }

  a:hover {
    color: var(--accent);
    text-decoration-thickness: 2px;
  }

  .intro {
    margin-bottom: 60px;
  }

  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    margin-top: 32px;
  }

  .project-card {
    display: block;
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  .project-card:hover .project-image {
    border-color: var(--accent);
  }

  .project-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #f5f2eb;
    border: 2px solid var(--border);
    border-radius: 8px;
    margin-bottom: 16px;
    overflow: hidden;
    transition: border-color 0.2s ease;
  }

  .placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-light);
    font-size: 14px;
  }

  .project-card h3 {
    margin-bottom: 8px;
  }

  .project-card p {
    color: var(--text-light);
    font-size: 16px;
    margin-bottom: 0;
  }

  footer {
    margin-top: 120px;
    padding-top: 40px;
    border-top: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: var(--text-light);
  }

  .links {
    display: flex;
    gap: 20px;
  }

  .links a {
    font-size: 14px;
  }

  @media (max-width: 640px) {
    main {
      padding: 40px 20px;
    }

    h1 {
      font-size: 28px;
      margin-bottom: 32px;
    }

    body {
      font-size: 16px;
    }

    footer {
      flex-direction: column;
      gap: 16px;
      align-items: flex-start;
    }
  }

  @media (min-width: 768px) {
    .project-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }
  }
</style>