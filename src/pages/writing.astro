<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --text: #2d2d2d;
    --text-light: #5a5a5a;
    --accent: #1a1a1a;
    --link: #4a4a4a;
    --border: rgba(208, 203, 192, 0.3);
  }

  body {
    background: linear-gradient(
      180deg,
      #87CEEB 0%,
      #B8D4E8 15%,
      #E8C4D8 35%,
      #F5B5A8 55%,
      #F4C8A0 75%,
      #5B7C9E 100%
    );
    min-height: 100vh;
    color: var(--text);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 16px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
  }

  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px;
    max-width: 800px;
    margin: 0 auto;
  }

  .back-link {
    color: var(--link);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 24px;
  }

  .nav-links a {
    color: var(--link);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--accent);
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 24px 80px;
  }

  .intro {
    margin-bottom: 60px;
  }

  h1 {
    font-size: 36px;
    font-weight: 600;
    margin-bottom: 16px;
    color: var(--accent);
  }

  .subtitle {
    font-size: 18px;
    color: var(--text-light);
    line-height: 1.6;
  }

  .articles {
    display: grid;
    gap: 24px;
    margin-bottom: 80px;
  }

  .article-card {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-2px);
    border-color: rgba(45, 45, 45, 0.3);
  }

  .article-meta {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-bottom: 12px;
    font-size: 13px;
  }

  .article-date {
    color: var(--text-light);
  }

  .article-category {
    padding: 2px 10px;
    background: rgba(45, 45, 45, 0.08);
    border-radius: 4px;
    color: var(--text-light);
    font-weight: 500;
  }

  .article-card h2 {
    font-size: 22px;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .article-excerpt {
    font-size: 15px;
    color: var(--text);
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .read-more {
    color: var(--link);
    text-decoration: none;
    font-weight: 500;
    font-size: 15px;
    transition: color 0.2s ease;
  }

  .read-more:hover {
    color: var(--accent);
  }

  .newsletter {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 40px;
    text-align: center;
  }

  .newsletter h2 {
    font-size: 24px;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 8px;
  }

  .newsletter > p {
    font-size: 16px;
    color: var(--text-light);
    margin-bottom: 24px;
  }

  .newsletter-form {
    display: flex;
    gap: 8px;
    max-width: 400px;
    margin: 0 auto 12px;
  }

  .newsletter-form input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 15px;
    background: rgba(255, 255, 255, 0.8);
    color: var(--text);
    font-family: inherit;
  }

  .newsletter-form input::placeholder {
    color: var(--text-light);
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .newsletter-form button {
    padding: 12px 24px;
    background: var(--accent);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
  }

  .newsletter-form button:hover {
    background: var(--text);
  }

  .newsletter-note {
    font-size: 13px;
    color: var(--text-light);
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 28px;
    }

    .article-card h2 {
      font-size: 20px;
    }

    .newsletter {
      padding: 32px 24px;
    }

    .newsletter-form {
      flex-direction: column;
    }
  }
</style>