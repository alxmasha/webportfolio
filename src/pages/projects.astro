<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --text: #2d2d2d;
    --text-light: #5a5a5a;
    --accent: #1a1a1a;
    --link: #4a4a4a;
    --border: rgba(208, 203, 192, 0.3);
  }

  body {
    background: linear-gradient(
      180deg,
      #87CEEB 0%,
      #B8D4E8 15%,
      #E8C4D8 35%,
      #F5B5A8 55%,
      #F4C8A0 75%,
      #5B7C9E 100%
    );
    min-height: 100vh;
    color: var(--text);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 16px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
  }

  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .back-link {
    color: var(--link);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 24px;
  }

  .nav-links a {
    color: var(--link);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--accent);
  }

  main {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 24px 80px;
  }

  .intro {
    margin-bottom: 60px;
  }

  h1 {
    font-size: 36px;
    font-weight: 600;
    margin-bottom: 16px;
    color: var(--accent);
  }

  .subtitle {
    font-size: 18px;
    color: var(--text-light);
    line-height: 1.6;
    max-width: 700px;
  }

  .projects {
    display: grid;
    gap: 32px;
  }

  .project-card {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: rgba(45, 45, 45, 0.3);
  }

  .project-card.featured {
    grid-column: 1 / -1;
  }

  .project-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: rgba(245, 242, 235, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder {
    color: var(--text-light);
    font-size: 14px;
  }

  .project-content {
    padding: 24px;
  }

  .project-tag {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 12px;
  }

  .project-card h2 {
    font-size: 22px;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 12px;
  }

  .project-description {
    font-size: 15px;
    color: var(--text);
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .project-tech span {
    font-size: 13px;
    padding: 4px 12px;
    background: rgba(45, 45, 45, 0.08);
    border-radius: 4px;
    color: var(--text-light);
  }

  @media (min-width: 768px) {
    .projects {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 28px;
    }

    .project-card h2 {
      font-size: 20px;
    }
  }
</style>