---
const { title, category, imagePath } = Astro.props;
---
<div class="group cursor-pointer mb-12">
  <div class="aspect-[4/3] bg-gray-100 rounded-3xl overflow-hidden mb-6 transition-transform duration-500 group-hover:scale-[1.01]">
    <img 
      src={imagePath} 
      alt={title} 
      class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-opacity"
    />
  </div>
  <div class="flex justify-between items-end px-2">
    <div>
      <h3 class="text-2xl font-medium">{title}</h3>
      <p class="text-gray-400 mt-1">{category}</p>
    </div>
    <span class="text-sm font-mono text-gray-300">/ 01</span>
  </div>
</div>